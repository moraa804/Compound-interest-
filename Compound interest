//program to calculate the compound interest 
/*
Author: Nancy moraa Kebaso 
reg no:CT101/G/23248/24
*/
#include <stdio.h>


int main()
{
    float principal,rate, time,N;
    printf("enter principal: \n");
    scanf("%f",& principal);
    printf("enter rate: \n");
    scanf("%f",&rate);
    printf("enter time: \n");
    scanf("%f",& time);
    printf("the value of N is:");
    scanf("%f",&N);
    //calculating the compound interest 
    float compound_interest=principal*pow((1+(rate/(100*N))),N*time)- principal;
    
    printf("the compound_interest is: %2f \n", compound_interest);
    
    return 0;
}    
    
